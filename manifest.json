{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Pimp my Trello",
  "homepage_url": "https://github.com/yairper/pimp-my-trello",
  "author": "Yair Perman",
  "version": "0.0.6",
  "manifest_version": 2,
  "icons": {
  },
   "page_action": {
    "default_icon": {
    }
  },

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://trello.com/*"
      ],
      "js": [
        "src/js/helpers.js",
        "src/js/a.js",
        "src/js/inject_fa_font_face.js",

        "src/js/label.js",
        "src/js/tags_list.js",
        "src/js/card.js",
        "src/js/cards_list_observer.js",
        "src/js/cards_list_mutations.js",
        "src/js/cards_list.js",
        "src/js/replace_toggle_menu_icons.js",
        "src/js/board.js",
        "src/js/index/index.js"
      ],
      "css": [
        "src/css/scrum_for_trello_overrides.css",
        "src/css/style.css",
        "src/css/font-awesome.min.css"
      ]
    }
  ],

  "web_accessible_resources": [
    "src/fonts/fontawesome-webfont.woff2"
  ]
}
